// Find diameter, circumference and area of circle using function
#include <stdio.h>
float area(float r)
{ float a;
  a = 3.1416 * r*r;
  return a;
}

float circum(float r)
{ float c;
  c= 2*3.1416*r;
  return c;
}

float diameter(float r)
{ float d;
  d= 2*r;
}

int main() 
{
    float x, area1, circum1, diameter1;
    scanf("%f", &x);
    
    area1= area(x);
    circum1= circum(x);
    diameter1= diameter(x);
    
    printf("Area= %.2f \n", area1);
    printf("Circumference= %.2f \n", circum1);
    printf("Diameter= %.2f \n", diameter1);
}
