/* Until the user quits, take input from the user and
 find whether it is zero,positive or negative using a while loop.*/

#include <stdio.h>
int main()
{
  int n;
  while(1)
  {
      printf("Enter a number: ");
      scanf("%d", &n);

      if(n>0)
      {
          printf("Positive\n");
      }
      else if(n<0)
      {
          printf("Negative\n");
      }
      else
      {
          printf("Zero\n");

      }
  }

}



